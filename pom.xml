<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.jenkins-ci.plugins</groupId>
  <artifactId>github-branch-source</artifactId>
  <version>2.4.6-beta-3-SNAPSHOT</version>
  <packaging>hpi</packaging>

  <name>GitHub Branch Source Plugin</name>
  <description>Jenkins Plugin for GitHub branch source</description>
  <url>https://github.com/santhoshi0705/splunkforjenkins</url>

  <licenses>
    <license>
      <name>The MIT License</name>
      <url>http://opensource.org/licenses/MIT</url>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:https://github.com/santhoshi0705/splunkforjenkins.git</connection>
    <developerConnection>scm:git:https://github.com/santhoshi0705/splunkforjenkins.git</developerConnection>
    <url>https://github.com/santhoshi0705/splunkforjenkins</url>
  </scm>

  <properties>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>

    <!-- Sonar Scanner Maven Plugin version -->
    <sonar-maven-plugin.version>4.0.0.4121</sonar-maven-plugin.version>
  </properties>

  <build>
    <plugins>
      <!-- Jenkins HPI plugin -->
      <plugin>
        <groupId>org.jenkins-ci.tools</groupId>
        <artifactId>maven-hpi-plugin</artifactId>
        <version>4.50</version>
        <extensions>true</extensions>
      </plugin>

      <!-- Sonar Maven Plugin for code analysis -->
      <plugin>
        <groupId>org.sonarsource.scanner.maven</groupId>
        <artifactId>sonar-maven-plugin</artifactId>
        <version>${sonar-maven-plugin.version}</version>
      </plugin>
    </plugins>
  </build>

</project>
